@import 'nib'

.nav-refresh-container
  position: relative
  vertical-align: middle

.nav-refresh
  width: 65px
  height: 30px
  line-height: 25px
  text-align: center
  margin-right: 0.5em
  margin-top: 0.3em
  background-color: transparent
  background-image: url(../images/right_btn_bg.png)
  float: right
  background-size: 65px 30px
  background-repeat: no-repeat

.nav-refresh:active,.nav-refresh:hover
  background-image: url(../images/right_btn_bg_active.png)
  background-position: 0

.nav-refresh div
  font-size: 14px
  line-height: 31px
  text-align: center

